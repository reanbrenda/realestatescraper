# Real Estate Scraper API - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Django Configuration
# =============================================================================
DEBUG=1
DJANGO_SETTINGS_MODULE=real_estate_scraper.settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=db
DB_NAME=real_estate
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
JWT_REFRESH_EXPIRE_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================
CLIENT_URLS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Bot Integration
# =============================================================================
BOT_API_URL=http://django:8000/api
BOT_USERNAME=your_bot_username
BOT_PASSWORD=your_bot_password

# =============================================================================
# AI Integration (Optional)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_DIMENSIONS=512

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# Redis Configuration (Optional - for caching)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# =============================================================================
# Production Settings (Set to 0 for production)
# =============================================================================
DEBUG=1
